%
% Define macros to create the contact information page
%
\def\tabitem#1#2{%
    #1: \> \parbox[t]{5cm}{#2} \\%
}

\def\maketabbingenv{%
    \sbox0{\insertaddress\insertweb\insertphone\insertfax\insertemail}\ifdim\wd0=0pt%
    \else%
        \begin{tabbing}%
            \hspace*{1.2cm}\=\kill%
            \ifx\insertaddress\empty%
            \else%
                \tabitem{Address}{\insertaddress}%
            \fi%
            \ifx\insertweb\empty%
            \else%
                \tabitem{Internet}{\insertweb}%
            \fi%
            \setbox1=\hbox{\insertaddress\insertweb}\ifdim\wd1=0pt%
            \else%
                \sbox2{\insertphone\insertfax\insertemail}\ifdim\wd2=0pt%
                \else%
                    \\%
                \fi%
            \fi%
            \ifx\insertphone\empty%
            \else%
                \tabitem{Phone}{\insertphone}%
            \fi%
            \ifx\insertfax\empty%
            \else%
                \tabitem{Fax}{\insertfax}%
            \fi%
            \ifx\insertemail\empty%
            \else%
                \tabitem{E-Mail}{\insertemail}%
            \fi%
        \end{tabbing}%
        \vspace*{-.8cm}%
    \fi%
}

\def\contactpage
{%
    \usebeamerfont{contact}%
    \begin{columns}[c]%
        \begin{column}{.39\textwidth}%
            \includegraphics[scale=.5]{aisec_building.pdf}%
        \end{column}%
        \begin{column}{.56\textwidth}%
            \ifx\insertname\empty%
            \else%
                \insertname\par\vskip\baselineskip%
            \fi%
            \ifx\insertdepartment\empty%
            \else%
                \insertdepartment\par\vskip\baselineskip%
            \fi%
            \ifx\insertinstitute\empty%
            \else%
                \insertinstitute%
            \fi%
            \maketabbingenv%
        \end{column}%
    \end{columns}%
}

%
% Define new environments for titlepage, outline, bibliography and contact page
%
\newenvironment{titleframe}[1][]{%
    \makeatletter%
    \setbeamertemplate{headline}[empty]%
    \setbeamertemplate{footline}[empty]%
    \def\beamer@entrycode{\vspace*{-\headheight}}%
    \makeatother%
    \begin{frame}[environment=titleframe,t,#1]%
}{%
    \end{frame}%
    \addtocounter{framenumber}{-1}%
}

\newenvironment{outlineframe}[1][]{%
    \setbeamertemplate{headline}[outline]%
    \begin{frame}[environment=outlineframe,#1]%
}{%
    \end{frame}%
}

\newenvironment{bibliographyframe}[1][]{%
    \setbeamertemplate{headline}[bibliography]%
    \begin{frame}[environment=bibliographyframe,#1]%
}{%
    \end{frame}%
}

\newenvironment{contactframe}[1][]{%
    \begin{frame}[environment=contactframe,c,#1]%
    \frametitle{\iflanguage{ngerman}{Kontaktinformation}{\iflanguage{german}{Kontaktinformation}{Contact Information}}}%
    \framesubtitle{\ }%
}{%
    \end{frame}%
}

