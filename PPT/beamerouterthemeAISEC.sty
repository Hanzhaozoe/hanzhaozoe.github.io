%
% Set custom footline
%
\setbeamertemplate{footline}
{%
    \hskip\beamerleftmargin%
    \begin{minipage}{\dimexpr\hsize-\beamerleftmargin-\beamerrightmargin}%
        \color{fraunhofergreen}\rule{\hsize}{\fraunhoferrulefootline}\par%
        \vskip2pt%
        \ifinfoline%
            \color{black}\usebeamerfont{footline}\insertshorttitle\ $|$\ \insertshortauthor\ $|$\ \insertdate\ $|$\ \insertframenumber%
            \ifconfidential%
				\ $|$\ \textbf{\color{red}CONFIDENTIAL}
            \fi%
            \par%
        \else%
            \vskip\baselineskip%
        \fi%
        \vskip-8pt%
        \color{gray}\usebeamerfont{footline}\copyright\ Fraunhofer%
        \hfill\includegraphics[scale=.23]{aisec_logo.pdf}\par%
    \end{minipage}%
    \vskip\beamerbotmargin%
}

