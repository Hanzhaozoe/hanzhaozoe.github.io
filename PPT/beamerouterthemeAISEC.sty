%
% Define empty headline (in case beamer's default headline changes at some point)
%
\defbeamertemplate{headline}{empty}
{}

%
% Define macro for headline plotting
%
\def\makeheadline[#1]{%
    \vskip\beamertopmargin%
    \hskip\beamerleftmargin%
    \begin{minipage}{\dimexpr\hsize-\beamerleftmargin-\beamerrightmargin}%
        \ifcase#1% case 0: outline
            \color{fraunhofergreen}\rule{\hsize}{\fraunhoferruleheadlinetop}\par%
            \vskip.15cm%
            \color{black}\usebeamerfont{title}%
            \ifx\insertframetitle\empty%
                \inserttitle\par%
            \else%
                \insertframetitle\par%
            \fi%
            \vskip.3cm%
            \color{fraunhofergreen}\rule{\hsize}{\fraunhoferruleheadlinebot}%
        \or% case 1: normal
            \color{black}\usebeamerfont{frametitle}%
            \vbox to .4cm{%
                \ifx\insertframetitle\empty%
                    \ifnumbering%
                        \thesection. \insertsectionhead%
                    \else%
                        \insertsectionhead%
                    \fi%
                \else%
                    \insertframetitle%
                \fi%
                \vfil%
            }%
            \par%
            \vbox to .3cm{%
                \color{fraunhofergreen}\usebeamerfont{framesubtitle}%
                \ifnumbering%
                    \hskip1.2em
                    \ifx\insertframesubtitle\empty%
                        \ifx\insertsubsubsectionhead\empty%
                            \thesection.\thesubsection\ \insertsubsectionhead%
                        \else%
                            \thesection.\thesubsection.\thesubsubsection\ \insertsubsubsectionhead%
                        \fi%
                    \else%
                        \insertframesubtitle%
                    \fi%
                \else
                    \ifx\insertframesubtitle\empty%
                        \ifx\insertsubsubsectionhead\empty%
                            \insertsubsectionhead%
                        \else%
                            \insertsubsubsectionhead%
                        \fi%
                    \else%
                        \insertframesubtitle%
                    \fi%
                \fi%
                \vfil%
            }%
        \or% case 2: bibliography
            \vbox to .4cm{%
                \color{black}\usebeamerfont{frametitle}%
                \ifx\insertframetitle\empty%
                    \ifnumbering%
                        \thesection. \insertsectionhead%
                    \else%
                        \insertsectionhead%
                    \fi%
                \else%
                    \insertframetitle%
                \fi%
                \vfill%
            }%
            \par%
            \vbox to .3cm{%
                \color{fraunhofergreen}\usebeamerfont{framesubtitle}%
                \ifx\insertframesubtitle\empty%
                \else
                    \insertframesubtitle%
                \fi%
            }%
        \fi% end of case switching
    \end{minipage}%
}

%
% Define custom headlines (headlines are set in beamerthemeAISEC.sty)
%
\defbeamertemplate{headline}{outline}
{
    \makeheadline[0]
}

\defbeamertemplate{headline}{normal}
{
    \makeheadline[1]
}

\defbeamertemplate{headline}{bibliography}
{
    \makeheadline[2]
}

