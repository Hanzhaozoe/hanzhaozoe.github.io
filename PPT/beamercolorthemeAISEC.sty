%

\mode<presentation>

%
% Define Fraunhofer colors
%
\definecolor{fraunhofergreen}{RGB}{23,156,125}
\definecolor{fraunhofergrey}{RGB}{168,175,175}
\definecolor{fraunhoferorange}{RGB}{235,106,10}
\definecolor{fraunhofernavy}{RGB}{0,110,146}
\definecolor{fraunhofercyan}{RGB}{37,186,226}
\definecolor{fraunhoferlime}{RGB}{177,200,0}
\definecolor{fraunhoferlightbeige}{RGB}{254,239,214}
\definecolor{fraunhoferlightblue}{RGB}{212,230,244}
\definecolor{fraunhoferlightgray}{RGB}{225,227,227}

%
% Change basic colors
%
\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{greyed text}{fg=fraunhofergrey}
\setbeamercolor{alerted text}{fg=fraunhoferorange}
\setbeamercolor{structure}{fg=fraunhofergreen}

%
% Change (and define new) colors for table of contents
%
\setbeamercolor{section in toc}{parent=normal text}
\setbeamercolor{subsection in toc}{parent=normal text}
\setbeamercolor{sectionnumber in toc}{parent=structure} % newly defined
\setbeamercolor{subsectionnumber in toc}{parent=greyed text} % newly defined

%
% Change colors for items and subitems (itemize, enumerate, ...)
%
\setbeamercolor{item}{parent=structure}
\setbeamercolor{subitem}{parent=greyed text}
\setbeamercolor{subsubitem}{parent=subitem}

%
% Change colors for the bibliography
%
\setbeamercolor{bibliography entry author}{use=normal text, fg=normal text.fg}
\setbeamercolor{bibliography entry title}{use=normal text, fg=normal text.fg}
\setbeamercolor{bibliography entry location}{use=normal text, fg=normal text.fg!50!bg}
\setbeamercolor{bibliography entry note}{parent=normal text, fg=normal text.fg!50!bg}

%
% Define and change colors for blocks
%
\definecolor{blockgreynavy}{RGB}{198,231,242}
\definecolor{blockgreygreen}{RGB}{199,242,232}
\definecolor{blockgreyorange}{RGB}{243,218,199}
\setbeamercolor{block title}{fg=white, bg=fraunhofergreen}
\setbeamercolor{block body}{bg=blockgreygreen}
\setbeamercolor{block title alerted}{fg=white, bg=fraunhoferorange}
\setbeamercolor{block body alerted}{bg=blockgreyorange}
\setbeamercolor{block title example}{fg=white, bg=fraunhofernavy}
\setbeamercolor{block body example}{bg=blockgreynavy}

\mode
<all>
